{
  "name": "hcm-skills-matrix-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:desktop": "yarn generate:icon && yarn build && electron-builder --win --x64",
    "generate:icon": "node scripts/generate-icon.cjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^3.9.0",
    "@mui/icons-material": "^6.3.0",
    "@mui/lab": "^6.0.0-alpha.152",
    "@mui/material": "^6.3.0",
    "@tanstack/react-query": "^5.62.3",
    "axios": "^1.7.9",
    "dayjs": "^1.11.13",
    "i18next": "^24.1.1",
    "jwt-decode": "^4.0.0",
    "notistack": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.53.0",
    "react-i18next": "^15.5.3",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.12.7",
    "zod": "^3.23.8",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "28.3.3",
    "electron-builder": "24.13.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^25.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.hcmskillsmatrix.app",
    "productName": "HCM Skills Matrix",
    "directories": {
      "output": "dist-desktop"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend/build",
        "to": "backend",
        "filter": [
          "api.exe",
          "data/**"
        ]
      }
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/assets/app-icon.ico",
      "artifactName": "hcm-skills-matrix-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "packageManager": "yarn@1.22.22"
}